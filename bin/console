#!/usr/bin/env ruby

require 'bundler/setup'
require 'dry/monads/all'

M = Dry::Monads

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
require 'pry'

def match(value)
  case value
  in M::Success(1) then :one
  in M::Success(2 | 3) then :two_or_three
  in M::Success(4..10) then :four_to_ten
  in M::Success(a) then a
  in M::Failure([:not_ok, e]) then e
  in M::Failure(e) then e
  end
end

binding.pry

p
